{
  "name": "shopify-app-ts",
  "private": true,
  "license": "UNLICENSED",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --skipLibCheck && npm run build:client",
    "build:client": "vite build --outDir dist/client",
    "prisma:migrate": "npx prisma migrate deploy",
    "dev": "cross-env NODE_ENV=development nodemon --exec node --loader ts-node/esm index.ts --ignore ./frontend",
    "preserve": "npm run build",
    "prepare": "npx prisma generate",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "start": "npm run prisma:migrate && npm run serve",
    "test": "vitest --reporter=verbose"
  },
  "type": "module",
  "engines": {
    "node": ">=14.13.1"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@shopify/shopify-api": "^5.0.0",
    "@trpc/server": "10.0.0-rc.6",
    "@upstash/redis": "^1.16.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "envsafe": "^2.0.3",
    "express": "^4.17.3",
    "node-fetch": "^3.3.0",
    "redis": "^4.5.0",
    "serve-static": "^1.14.1",
    "superjson": "^1.11.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.2",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.27.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node-env-run": "^4.0.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.6.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
